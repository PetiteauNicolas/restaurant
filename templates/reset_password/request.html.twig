{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="block-page">
        <h1 class="block-name">Réinitialisation du mot de passe</h1>
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Veuillez saisir votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>
        <div class="button">
            <button class="btn-add">Envoyer un e-mail de réinitialisation du mot de passe</button>
        </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
